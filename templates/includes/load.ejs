<script src="https://cdn.jsdelivr.net/npm/progressbar.js@1.1.0/dist/progressbar.min.js"></script>

<script>
  let container = document.querySelector('body')

  let bar = new ProgressBar.Line(container, {
    strokeWidth: 1,
    easing: 'easeInOut',
    duration: 100,
    color: 'red',
    // trailColor: 'blue',
    trailWidth: 1,
    svgStyle: {
      position: 'fixed',
      top: 0,
      width: '100%',
      height: '3px',
    }
  });

  bar.animate(1.0);
</script>
